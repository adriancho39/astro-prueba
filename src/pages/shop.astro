import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";

const products = [
    {
        title: "Royal Beluga",
        price: "€450.00",
        weight: "50g",
        image: "/images/beluga.png",
    },
    {
        title: "Imperial Ossetra",
        price: "€280.00",
        weight: "50g",
        image: "/images/ossetra.png",
    },
    {
        title: "Golden Sevruga",
        price: "€190.00",
        weight: "50g",
        image: "/images/beluga.png",
    },
    {
        title: "Kaluga Hybrid",
        price: "€150.00",
        weight: "50g",
        image: "/images/ossetra.png",
    },
    {
        title: "Siberian Sturgeon",
        price: "€120.00",
        weight: "50g",
